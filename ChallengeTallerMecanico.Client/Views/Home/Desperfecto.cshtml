@model DesperfectoVM

@{
    ViewData["Title"] = "Desperfecto";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0/css/bootstrap-select.min.css" />

<h1>Desperfecto</h1>
<hr />
<div>
    <form id="desperfectoForm">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="descripcion">Descripción</label>
                <input type="text" id="descripcion" class="form-control" required />
            </div>
            <div class="form-group col-md-6">
                <label for="manoDeObra">Mano de Obra</label>
                <input type="number" id="manoDeObra" class="form-control" required />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="tiempo">Tiempo</label>
                <input type="number" id="tiempo" class="form-control" required />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label select-label" for="repuestos">Repuestos</label>
                <select id="repuestos" name="Repuestos" class="form-select selectpicker" multiple>
                    @foreach (var repuesto in Model.Repuestos)
                    {
                        <option value="@repuesto.Nombre">@repuesto.Nombre - $@repuesto.Precio</option>
                    }
                </select>
            </div>
        </div>
        <button id="agregarDesperfecto" type="button" class="btn btn-primary">Agregar Desperfecto</button>
    </form>
</div>

<table id="tablaDesperfectos" class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Mano de Obra</th>
            <th>Tiempo</th>
            <th>Repuestos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <!-- Aquí se agregarán los registros de desperfectos -->
    </tbody>
</table>

<button id="guardarDesperfectos" type="button" class="btn btn-success">Guardar</button>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>
<script src="~/js/Desperfecto.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
