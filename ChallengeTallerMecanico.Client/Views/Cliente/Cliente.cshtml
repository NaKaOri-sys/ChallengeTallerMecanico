@model ClienteVM
@{
    ViewData["Title"] = "Cliente";
}

<h1>Cliente</h1>

<form>
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre:</label>
        <input asp-for="Nombre" id="Nombre" name="Nombre" class="form-control" required>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Apellido" class="control-label">Apellido:</label>
        <input asp-for="Apellido" id="Apellido" name="Apellido" class="form-control" required>
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email:</label>
        <input asp-for="Email" id="Email" name="Email" class="form-control" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button id="save-btn" type="button" class="btn btn-primary">Guardar</button>
</form>
<script src="~/js/Cliente.js"></script>